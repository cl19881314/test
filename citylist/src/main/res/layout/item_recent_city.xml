<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_recent_city_tv"
        style="@style/city_category_textView_style"
        android:text="@string/hot_city" />

    <View style="@style/me_horizontal_view_style" />

    <com.example.citylist.widget.NoScrollGridView
        android:id="@+id/item_recent_city_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="1px"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:verticalSpacing="1px" />

    <View style="@style/me_horizontal_view_style" />


</LinearLayout>